server {
    listen 8080;
    server_name localhost;
    root www;
    index index.html index.py index.php www/index.webp;
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
    
    # Static files location
    location / {
        index index.html index.py index.php;
        autoindex on;
        allow_methods GET POST;
    }
    
    # CGI location
    location /cgi-bin/ {
        root www;
        cgi_path /usr/bin/python3 /usr/bin/php /bin/bash;
        cgi_extension .py .php .cgi;
        allow_methods GET POST;
    }
    
    # Static assets
    location /static/ {
        root www;
        allow_methods GET;
    }

    # DELETE endpoint for file management
    location /delete {
        root www;
        allow_methods DELETE;
    }
    
    # POST endpoints for form handling and file uploads
    location /post-test {
        root www;
        allow_methods POST;
    }
    
    location /upload {
        root www;
        allow_methods POST;
    }
    
    location /api/data {
        root www;
        allow_methods POST;
    }
    
    location /text-data {
        root www;
        allow_methods POST;
    }

    location /old/ {
        root www;
        return 301 new;
    }
}