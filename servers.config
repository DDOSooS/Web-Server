server {
    listen 8080;
    server_name localhost;
    root /Users/aezzahir/Dev/webserv/www;
    index index.html index.py index.php www/index.webp;
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
    
    # Static files location
    location / {
        index index.html index.py index.php;
        autoindex on;
        allow_methods GET POST;
    }
    
    # CGI location
    location /cgi-bin/ {
        root /Users/aezzahir/Dev/webserv/www;
        cgi_path /usr/bin/python3 /usr/bin/php /bin/bash;
        cgi_extension .py .php .cgi;
        allow_methods GET POST;
    }
    
    # Static assets
    location /static/ {
        root /Users/aezzahir/Dev/webserv/www;
        allow_methods GET;
    }

    location /old/ {
        root /Users/aezzahir/Dev/webserv/www;
        return 301 new;
    }
}