# Simple server configuration
server {
    listen 127.0.0.1:8080;
    server_name main;
    root www/test;
    index index.html;
    autoindex on;
    
    # Error pages
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
    
    # Default location
    location / {
        root www/test;
        index index.html;
        allow_methods GET POST HEAD;
        autoindex on;
    }
}
