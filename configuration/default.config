# Default server
server {
    listen 127.0.0.1:8080;
    server_name example.com www.example.com;
    root /var/www/default;
    index index.html;
    autoindex off;
    
    # Error pages
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
    
    # Default location
    location / {
        root /var/www/default;
        index index.html index.htm;
        allow_methods GET POST HEAD;
        autoindex off;
    }
    
    # Location with directory listing enabled
    location /files {
        root /var/www/files;
        index index.html;
        allow_methods GET HEAD;
        autoindex on;
    }
    
    # Redirection example
    location /old-page {
        return 301 /new-page;
    }
    
    # CGI handling
    location /cgi-bin {
        root /var/www/cgi-bin;
        allow_methods GET POST;
        cgi_extension .php .py;
        cgi_path /usr/bin/php-cgi /usr/bin/python;
    }
    
    # File upload handling
    location /upload {
        root /var/www/uploads;
        allow_methods POST;
        client_max_body_size 5M;
        upload_store /var/www/uploads/files;
    }
}

# Additional server (virtual host)
server {
    listen 8080;
    host 127.0.0.1;
    server_name admin.example.com;
    root /var/www/admin;
    index admin.html;
    
    # Limit access
    location / {
        root /var/www/admin;
        index admin.html;
        allow_methods GET;
        autoindex off;
    }
    
    # API endpoint with different methods allowed
    location /api {
        root /var/www/api;
        allow_methods GET POST PUT DELETE;
    }
}

# Server on a different port
server {
    listen 8081;
    host 0.0.0.0;
    server_name test.example.com;
    root /var/www/test;
    
    location / {
        root /var/www/test;
        index index.html;
        allow_methods GET;
    }
}